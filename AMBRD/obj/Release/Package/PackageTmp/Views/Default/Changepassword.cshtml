@model AMBRD.Models.ViewModels.ChangepasswordDTO
@{
    ViewBag.Title = "Changepassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Changepassword", "Default", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page-wrapper">
        <div class="page-body-wrapper">
            <div class="page-sidebar">

            </div>
            <div class="page-body">
                <div class="container-fluid">
                    <div class="page-header">
                        <div class="row">
                            <div class="col">
                                <div class="page-header-left">
                                    <h3>
                                        Change Password
                                    </h3>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <ol class="breadcrumb pull-right">
                                    <li class="breadcrumb-item"><a href="/Default/Dashboard"><i data-feather="home"></i></a></li>

                                    <li class="breadcrumb-item active">Change Password</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="card">
                                <div class="card-body">
                                    <form class="needs-validation">
                                        <div class="form-group row">
                                            <div class="col-xl-5 col-md-4">
                                                <label for="validationCustom0"><span>*</span>New Password</label>
                                            </div>
                                            <div class="col-md-7">
                                                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "password", required = "" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-xl-5 col-md-4">
                                                <label for="validationCustom0"><span>*</span>Confirm Password</label>
                                            </div>
                                            <div class="col-md-7">
                                                @Html.TextBoxFor(a => a.Confirmpassword, new { @class = "form-control", type = "password", required = "" })
                                            </div>
                                            @if (TempData["msg"] != null)
                                            {
                                                string msg = TempData["msg"].ToString();
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        @if (msg == "ok")
                                                        {
                                                            <div class="form-group">
                                                                <span style="color:green">Password change successfully.</span>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="form-group">
                                                                <span style="color:red">@msg</span>
                                                            </div>

                                                        }
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                        <input type="submit" value="Change" class="btn btn-secondary d-block" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
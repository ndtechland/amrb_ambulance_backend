@model AMBRD.Models.ViewModels.CityDTO
@{
    ViewBag.Title = "CityList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<!-- page-wrapper Start-->
<div class="page-wrapper">
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        <div class="page-sidebar">

        </div>
        <!-- Page Sidebar Ends-->


        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    District List
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Default/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item active">District List</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="btn-popup pull-right">
                                    <a href="/City/AddCity" class="btn btn-secondary" data-original-title="test">Add District</a>

                                </div>

                                @if (Model.Citylist == null)
                                {
                                    if (TempData["msg"] != null)
                                    {
                                        <h2 style="color: red;">@TempData["msg"]</h2>
                                    }
                                }
                                else
                                {
                                    @*<div class="card-body vendor-table">*@
                                    <div class="card-body ">
                                        <table class="display" id="basic-1">
                                            <thead>
                                                <tr>
                                                    <th>S#</th>
                                                    <th>State Name</th>
                                                    <th>City Name</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Citylist)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.StateName</td>
                                                        <td>@item.CityName</td>
                                                        <td>
                                                            <div>
                                                                <a href="/City/EditCity?id=@item.Id" class="link-button edit-state" onclick="return confirm('Are you sure you want to edit?');">
                                                                    <i class="fa fa-edit me-2 font-secondary"></i>
                                                                </a>
                                                                <a href="/City/DeleteCity?id=@item.Id" class="link-button" onclick="return confirm('Are you sure you want to delete?');">
                                                                    <i class="fa fa-trash font-danger"></i>
                                                                </a>
                                                                
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () { 
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);  
        }
    });
</script>
 

@model AMBRD.Models.ViewModels.AmbulanceDTO
@{
    ViewBag.Title = "AddAmbulance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddAmbulance", "Ambulance", FormMethod.Post, new { enctype = "multipart/form-data" }))

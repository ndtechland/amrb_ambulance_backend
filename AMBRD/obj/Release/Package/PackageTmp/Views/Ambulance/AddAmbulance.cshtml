                                                @Html.TextBoxFor(a => a.VehicleCImageFileBase64, new { @class = "form-control", type = "file", required = "required" })
                                                <span class="red">
                                                    @Html.ValidationMessageFor(a => a.VehicleImg)
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-xl-3 col-md-4">
                                                <label for="validationCustom2">Vehicle Number<span>*</span></label>
                                            </div>
                                            <div class="col-xl-8 col-md-7">

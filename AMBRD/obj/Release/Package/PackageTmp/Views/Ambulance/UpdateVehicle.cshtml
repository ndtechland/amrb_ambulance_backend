@model AMBRD.Models.ViewModels.VehicleAllotmentDTO
@{
    ViewBag.Title = "UpdateVehicle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">

        </div>

        <div class="page-body"> 
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    Vehicle Allotment to New Driver
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Default/Dashboard"><i data-feather="home"></i></a></li>

                                <li class="breadcrumb-item active">Allot Vehicle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row product-adding">
                    <div class="col-xl-6">

                        <div class="card">

                            <div class="card-body">
                                <div class="digital-add needs-validation">

                                    <table class="display" id="basic-1">
                                        <thead>
                                            <tr> 
                                                <th>Driver Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.VehicleLists)
                                            {
                                                <tr>
                                                    <td>@item.DriverName</td> 
                                                    <td><a href="/Ambulance/UpdateVehicles?Id=@item.Id" class="btn btn-secondary">Update</a></td>
                                                     
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<script src="/js/jquery-1.11.1.min.js"></script>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $('#myTable').DataTable();
</script>
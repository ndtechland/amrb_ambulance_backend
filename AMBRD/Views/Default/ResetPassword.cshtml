@model AMBRD.Models.ViewModels.ChangepasswordDTO
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="page-wrapper">
    <div class="authentication-box">
        <div class="container">
            <div class="row">
                <center>
                    <div class="col-md-7 p-0 card-right">
                        <div class="card tab2-card">
                            <div class="card-body">
                                @using (Html.BeginForm("ResetPassword", "Default", FormMethod.Post))
                                {
                                    <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="top-profile-tab" data-bs-toggle="tab" href="#top-profile" role="tab" aria-controls="top-profile" aria-selected="true"><span class="icon-user me-2"></span>Password Recovery</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="top-tabContent">
                                        <div class="tab-pane fade show active" id="top-profile" role="tabpanel" aria-labelledby="top-profile-tab">
                                            <form class="form-horizontal auth-form">
                                                <div class="form-group" style=" margin-left:-9px;">
                                                    <label>Enter your new password below to reset your password.</label>
                                                </div>

                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", required = "required", type = "password",placeholder="New Password" })
                                                </div>

                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.Confirmpassword, new { @class = "form-control", required = "required", type = "password", placeholder = "Confirm Password" })
                                                </div>
                                                <div class=" row ">
                                                    @if (TempData["msg"] != null)
                                                    {
                                                        string msg = TempData["msg"].ToString();
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                @if (msg == "ok")
                                                                {
                                                                    <div class="alert alert-success">
                                                                        Your password has been successfully reset. You can now login with your new password.
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="alert alert-danger">
                                                                        @msg
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                <div class=" row">
                                                    <div class="form-button">
                                                        <input type="submit" class="btn btn-primary" value="Reset Password" />
                                                        <a href="/Default/Login" class="btn btn-default forgot-pass" style="color: #00baf2; ">Go to login</a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </center>
            </div> 
        </div>
    </div>
</div>
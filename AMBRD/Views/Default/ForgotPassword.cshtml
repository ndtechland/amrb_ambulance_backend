@model AMBRD.Models.ViewModels.AdminLoginDTO
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="page-wrapper">
    <div class="authentication-box">
        <div class="container">
            <div class="row">
                <center>
                    <div class="col-md-7 p-0 card-right">
                        <div class="card tab2-card">
                            <div class="card-body">
                                @using (Html.BeginForm("ForgotPassword", "Default", FormMethod.Post))
                                {
                                    <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="top-profile-tab" data-bs-toggle="tab" href="#top-profile" role="tab" aria-controls="top-profile" aria-selected="true"><span class="icon-user me-2"></span>Password Recovery</a>
                                        </li>

                                    </ul>
                                    <div class="tab-content" id="top-tabContent">
                                        <div class="tab-pane fade show active" id="top-profile" role="tabpanel" aria-labelledby="top-profile-tab">
                                            <form class="form-horizontal auth-form">
                                                <div class="form-group" style=" margin-left:-9px;">
                                                    <label>Enter your e-mail address below and we will send you instructions<br /> on how to recover a password.</label>
                                                </div>

                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control", required = "required" })
                                                </div>

                                                <div class=" row ">
                                                    
                                                        @if (TempData["msg"] != null)
                                                        {
                                                            string msg = TempData["msg"].ToString();
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    @if (msg == "ok")
                                                                    {
                                                                        <div class="alert alert-success">
                                                                            Instructions on how to reset your password have been sent to your email.
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="alert alert-danger">
                                                                            @msg
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    

                                                </div>
                                                <div class=" row">
                                                    <div class="form-button">
                                                        <input type="submit" class="btn btn-primary" value="Reset Password" />

                                                    </div>
                                                </div> 

                                            </form>
                                        </div>

                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </center>

            </div>
            @*<a href="index.html" class="btn btn-primary back-btn"><i data-feather="arrow-left"></i>back</a>*@
        </div>
    </div>
</div>

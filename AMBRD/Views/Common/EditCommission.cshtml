@model AMBRD.Models.ViewModels.CommissionDTO
@{
    ViewBag.Title = "EditCommission";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("EditCommission", "Common", FormMethod.Post))
{
    <div class="page-wrapper">
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.Name)
        <div class="page-body-wrapper">
            <div class="page-sidebar">

            </div>

            <div class="page-body">

                <div class="container-fluid">
                    <div class="row product-adding">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="digital-add needs-validation">
                                        @if (TempData["msg"] != null)
                                        {
                                            string msg = TempData["msg"].ToString();
                                            <div class="row">
                                                <div class="col-md-12">
                                                    @if (msg == "ok")
                                                    {
                                                        <div class="alert alert-success">
                                                            Commission edit successfully.
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-danger">
                                                            @msg
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        <div class="form-group row">
                                            <div class="col-md-1">

                                                <h4>Name</h4>
                                            </div>
                                            <div class="col-md-3">
                                                <h4>@Model.Name</h4>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.TextBoxFor(a => a.Commission, new { @class = "form-control" })
                                            </div>
                                            <div class="col-md-3">
                                                <input type="submit" value="Submit" class="btn btn-secondary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>


        </div>

    </div>
}

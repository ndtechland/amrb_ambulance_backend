@model AMBRD.Models.ViewModels.CommissionDTO
@{
    ViewBag.Title = "Commision";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
@using (Html.BeginForm("AddCommision", "Common", FormMethod.Post))
{
    <div class="page-wrapper">
        <div class="page-body-wrapper">
            <div class="page-sidebar">

            </div>

            <div class="page-body">
                <div class="container-fluid">
                    <div class="page-header">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="page-header-left">
                                    <h3>
                                        Commission Report
                                    </h3>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <ol class="breadcrumb pull-right">
                                    <li class="breadcrumb-item"><a href="/Default/Dashboard"><i data-feather="home"></i></a></li>
                                    <li class="breadcrumb-item">Master Enteries</li>
                                    <li class="breadcrumb-item active">Add Commission</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row product-adding">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="digital-add needs-validation">
                                        @if (TempData["msg"] != null)
                                        {
                                            string msg = TempData["msg"].ToString();
                                            <div class="row">
                                                <div class="col-md-12">
                                                    @if (msg == "ok")
                                                    {
                                                        <div class="alert alert-success">
                                                            Commission add successfully.
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-danger">
                                                            @msg
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        <div class="form-group row">
                                            <div class="col-xl-3 col-md-7">
                                                <select name="Name" class="form-control" required="required">
                                                    <option value="">
                                                        --Select Any--
                                                    </option>
                                                    <option value="Ambulance">
                                                        Ambulance
                                                    </option>
                                                    <option value="Hospital">
                                                        Hospital
                                                    </option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="text" name="Commission" placeholder="Enter the Commission in %" class="form-control" required="required" />
                                            </div>
                                            <div class="col-md-3">
                                                <input type="submit" value="Submit" class="btn btn-secondary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
                <div class="card-body ">
                    <table class="display" id="basic-1">
                        <thead>
                            <tr>
                                <th>S#</th>
                                <th>
                                    Department
                                </th>
                                <th>
                                    Amount (In %)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CommissionList)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Name</td>
                                    <td>@item.Commission % </td>
                                    <td> 
                                        <a href="/Common/EditCommission?id=@item.Id" class="link-button edit-state" onclick="return confirm('Are you sure you want to edit?');">
                                            <i class="fa fa-edit me-2 font-secondary"></i>
                                        </a>
                                        <a href="/Common/DeleteCommission?id=@item.Id" class="link-button" onclick="return confirm('Are you sure you want to delete?');">
                                            <i class="fa fa-trash font-danger"></i>
                                        </a> 
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>


        </div>

    </div>

    
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);
        }
    });
</script>
